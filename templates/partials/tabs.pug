.tabdiv-container

        // This structure is incredibly cursed, but it's needed
        // since firefox doesn't support the :has selector and
        // we want this to be scriptless.

        input(type='radio', name='tabs', id='tab-1', checked)
        label(for='tab-1') CV
        input(type='radio', name='tabs', id='tab-2')
        label(for='tab-2') About
        .tab-content
            .tab#cv-tab
                include cv.pug
            .tab#about-tab
                include about.pug
